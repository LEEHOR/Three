<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        layout="@layout/layout_navibar"
        android:id="@+id/naviBar"/>
    <RadioGroup
        android:id="@+id/filterGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/naviBar"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:text="图片"
            android:button="@null"
            android:background="@drawable/bg_browse"
            android:checked="true"
            android:id="@+id/image"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textAlignment="center"

            />
        <RadioButton
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:text="音频"
            android:button="@null"
            android:background="@drawable/bg_browse"
            android:id="@+id/audio"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textAlignment="center"
            />
        <RadioButton
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:text="全部"
            android:button="@null"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bg_browse"
            android:id="@+id/all"
            android:layout_margin="10dp"
            android:textAlignment="center"
            />

    </RadioGroup>
    <ScrollView
        android:layout_below="@+id/filterGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </ScrollView>

        <LinearLayout
            android:id="@+id/liu_Players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:visibility="invisible"
            android:layout_alignParentBottom="true">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/schedule">

            </View>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recorderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="录音文件名"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">
               <TextView
                   android:id="@+id/imageChange"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableTop="@drawable/liulan_stoppaly_layer_list"
                   android:textSize="10dp"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:text="停止播放"/>
                <SeekBar
                   android:id="@+id/liu_SeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:secondaryProgress="100"
                    android:thumb="@drawable/play"
                    android:secondaryProgressTint="#00c4c4"
                    android:progressTint="#00ff00"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/PlayPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:text="00:00:00"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:layout_gravity="center"
                    android:text=" -- "/>

                <TextView
                    android:id="@+id/PlayCount"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textSize="12dp"
                    android:text="00:00:00"/>
            </LinearLayout>
        </LinearLayout>

</RelativeLayout>