<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProjectStartActivity">
    <!--头部-->
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <include
              layout="@layout/layout_navibar"
              android:id="@+id/naviBar" />
          <View
              android:id="@+id/project_startTopLine"

              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorPrimary"/>

              <android.support.v7.widget.RecyclerView
                  android:id="@+id/project_start_recycleView"
                  android:descendantFocusability="beforeDescendants"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                    android:layout_weight="1"
                 />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/top_radio_uncheck"/>
            <LinearLayout
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                <TextView
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/project_start_last"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/last"
                    android:text="返回上一题"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#f5f5f5"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/project_start_next"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:text="继续下一题"
                    android:textColor="#1075d4"
                    android:gravity="center"
                    android:drawableTop="@drawable/next"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

      </LinearLayout>
</FrameLayout>