<?xml version="1.0" encoding="utf-8"?>
<FrameLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/layout_navibar"
        android:id="@+id/naviBar"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:id="@+id/line"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:layout_weight="1"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            >
            <TextView
                android:paddingTop="8dp"
                android:layout_gravity="center"
                android:id="@+id/up"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:drawableTop="@drawable/last"
                android:text="返回上一题"
                android:textAlignment="center"
                android:layout_weight="1"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:paddingTop="8dp"
                android:layout_gravity="center"
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:text="继续下一题"
                android:textColor="#1075d4"
                android:drawableTop="@drawable/next"
                android:textAlignment="center"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:background="#f5f5f5"
            android:visibility="invisible"
            >
            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="删除"
                />

        </LinearLayout>
        </FrameLayout>

    </FrameLayout>

</LinearLayout>

    <FrameLayout
        android:id="@+id/medio_contr"
        android:alpha="0.6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="100dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/shenhe_shape"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/shenhe_camera"
                android:alpha="0.5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
               android:background="@drawable/shenhe_camear_image_selector"
               />
            <ImageView
                android:id="@+id/shenhe_recorder"
                android:alpha="0.5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shenhe_recorder_image_selector"

                />
            <ImageView
                android:id="@+id/shenhe_introductions"
                android:alpha="0.5"
                android:layout_marginBottom="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:background="@drawable/shenhe_introduction_image_selector"
                />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>