<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical"
    xmlns:tool="http://schemas.android.com/tools">
   <net.coahr.three3.three.customView.TopTitleBar
       android:id="@+id/fragmentupload_topbar"
       android:layout_width="match_parent"
       android:layout_height="50dp"
      />
   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <LinearLayout
          android:id="@+id/upload_topStatusBarOne"
          android:visibility="visible"
          android:layout_marginTop="5dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:background="@color/white"
          android:layout_height="40dp">
      <LinearLayout
          android:layout_marginStart="5dp"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          >
         <TextView
             android:id="@+id/up_notice"
             android:layout_gravity="center"
             android:gravity="left|center"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="15dp"
             android:textSize="8sp"
             android:textColor="#bcbcbc"
             android:text="2个项目，共100条数据，150个数据未上传"/>
      </LinearLayout>

      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="match_parent" >
         <Button
             android:id="@+id/upload_upAll"
             android:layout_width="0dp"
             android:layout_weight="1"
             style="?android:attr/borderlessButtonStyle"
             android:layout_height="wrap_content"
             android:textColor="#0092ff"
             android:textSize="12dp"
             android:padding="0dp"
             android:text="全部上传"/>
         <Button
             android:id="@+id/upload_batchOperation"
             android:layout_width="0dp"
             android:layout_weight="1"
             style="?android:attr/borderlessButtonStyle"
             android:layout_height="wrap_content"
             android:textColor="#0092ff"
             android:textSize="12dp"
             android:text="批量操作"/>
      </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:visibility="gone"
          android:background="@color/white"
          android:id="@+id/upload_topStatusBarTwo"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_marginTop="5dp"
          android:layout_height="40dp">
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_gravity="center"
             android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/upload_selectedAll"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="全选"
                android:textColor="@color/date"/>
         </LinearLayout>

         <LinearLayout
             android:layout_marginLeft="25dp"
             android:layout_width="0dp"
             android:layout_weight="2"
             android:gravity="left"
             android:layout_gravity="center"
             android:layout_height="match_parent">
            <Button
                android:background="@color/uncomplete"
                android:id="@+id/upload_upall_pi"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/bottom_radio_bg"
                android:text="批量上传" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="2"
            android:gravity="right"
             android:layout_gravity="center"
             android:layout_marginEnd="20dp"
             android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:gravity="right|center"
                   android:id="@+id/upload_upcance"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                    android:textSize="16dp"
                      android:textColor="@color/unlocationTxt"
                      android:text="取消" />

         </LinearLayout>

       </LinearLayout>
         </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:background="@color/home_bg"/>
   <LinearLayout
       android:id="@+id/upfragment_upline"
       android:layout_marginTop="5dp"
       android:orientation="vertical"
       android:visibility="gone"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <ProgressBar
          android:id="@+id/upfragment_bar"
          android:layout_width="match_parent"
          android:max="100"
          style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
          android:layout_height="5dp" />
      <TextView
          android:id="@+id/upfragment_uptv"
          android:lines="1"
          android:layout_gravity="center"
          android:gravity="center"
          android:ellipsize="end"
          android:textSize="10dp"
          android:text="图片2正在上传"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      <View
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_marginTop="5dp"
          android:background="@color/home_bg"/>
   </LinearLayout>

   <android.support.v4.widget.SwipeRefreshLayout
       android:id="@+id/upload_refresh"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp">
      <android.support.v7.widget.RecyclerView
          android:id="@+id/upload_recycleview"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
   </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>