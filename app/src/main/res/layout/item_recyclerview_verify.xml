<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="330dp"
        android:layout_height="160dp"
        android:background="@drawable/bg_round_white">
        <LinearLayout
            android:id="@+id/recy_top"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <TextView
            android:id="@+id/completeOfStatus"
            android:gravity="center"
            android:background="@drawable/item_root_recycleviewtextviewshape"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="51/100"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/completeOfStatus"
            android:text="[明访,全程录音]"
            android:layout_alignTop="@+id/completeOfStatus"
            android:layout_marginTop="5dp"
            android:textColor="@color/schedule"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/completeOfStatus"
            android:layout_below="@+id/type"
            android:text="2018/2/1-2018/2/11"
            android:layout_alignLeft="@+id/type"
            android:layout_marginTop="5dp"
            android:textColor="@color/date"
          android:textSize="12dp"
            />
        <Button
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="#0092ff"
            android:text="详情"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_below="@+id/recy_top"
            android:background="@color/topLine"/>


        <!--中部-->
        <LinearLayout
            android:id="@+id/recy_cen"
            android:layout_below="@+id/line"
            android:layout_marginTop="5dp"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/projectId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="[11.43002]"
                        android:textColor="@color/title"
                        android:textSize="9dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                   android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/projectName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SWM斯威汽车形象店运营核查"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/title"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="16dp"
                        />
                </LinearLayout>


            </LinearLayout>
        <RelativeLayout
            android:id="@+id/company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/projectId"
            >
            <ImageView
                android:id="@+id/companyIcon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/company"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="武汉仁和胜利车业有限公司"
                android:layout_toRightOf="@+id/companyIcon"
                android:layout_alignTop="@+id/companyIcon"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/centerTxt"
                android:layout_centerVertical="true"
                android:textSize="11dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/company"
            >
            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/site"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="湖北省武汉市北岸区竹叶山中环商贸城C9-11"
                android:layout_toRightOf="@+id/locationIcon"
                android:layout_alignTop="@+id/locationIcon"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/centerTxt"
                android:layout_centerVertical="true"
                android:textSize="11dp"
                />
        </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/bottom_line"
            android:layout_below="@+id/recy_cen"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/topLine"
            />
        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/bottom_line">
            <TextView
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-02-05 18:00 更新"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/verifyFail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共有5道题被打回"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/update"
                android:textSize="12sp"
                android:textColor="#0092ff"
                android:layout_marginRight="10dp"

                />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>