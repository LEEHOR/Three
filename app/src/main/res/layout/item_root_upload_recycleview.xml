<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="160dp">
    <android.support.v7.widget.CardView
    android:layout_centerHorizontal="true"
    app:cardPreventCornerOverlap="true"
    android:layout_width="330dp"
    android:layout_height="160dp"
    app:cardCornerRadius="5dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:visibility="gone"
    android:id="@+id/rootupload_Left"
    android:layout_alignParentStart="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/rootupload_Rb"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

<RelativeLayout
    android:layout_toEndOf="@+id/rootupload_Left"
    android:layout_alignParentEnd="true"
    android:layout_gravity="right"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--上部-->
    <LinearLayout
        android:id="@+id/home_upload_top"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/rootupload_schedule"
        android:gravity="center"
        android:background="@drawable/item_root_recycleviewtextviewshape"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="51/100"
        android:textColor="@color/colorWhite"
        android:textSize="10dp"/>
    <TextView
        android:id="@+id/rootupload_explain"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/rootupload_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="12sp"
        android:textColor="@color/schedule"
        tool:text="[明访，需全程录音]"/>
    <TextView
        android:id="@+id/rootupload_startDate"
        android:layout_toEndOf="@+id/rootupload_schedule"
        android:layout_below="@+id/rootupload_explain"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/date"
        tool:text="2018/3/2"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/rootupload_dateline"
        android:layout_toEndOf="@+id/rootupload_startDate"
        android:layout_below="@+id/rootupload_explain"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:gravity="center"
        android:textColor="@color/date"
        android:text="-"/>
    <TextView
        android:id="@+id/rootupload_endDate"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/rootupload_explain"
        android:layout_toEndOf="@+id/rootupload_dateline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/date"
        android:textSize="12dp"
        tool:text="2018/4/3"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/uncomplete"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="20dp"
            android:text="上传"/>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="310dp"
        android:background="@color/topLine"
        android:layout_height="1dp" />
    </RelativeLayout>
    </LinearLayout>

    <!--中部-->
    <LinearLayout
        android:id="@+id/rootupload_projectcent"
        android:orientation="vertical"
        android:layout_below="@+id/home_upload_top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/rootupload_projectNumber"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title"
            android:textSize="9dp"
            android:textStyle="bold"
            tool:text="[201574155]"/>
        <TextView
            android:id="@+id/rootupload_projectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:textSize="16dp"
            android:singleLine="true"
            android:textColor="@color/title"
            tool:text="hahahahahaahahhahhaahahahahhahahah"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/home_company"
        android:layout_gravity="center"
        android:layout_width="10dp"
        android:layout_height="10dp" />
    <TextView
        android:id="@+id/rootupload_storeName"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/centerTxt"
        android:textSize="11dp"
        tool:text="武汉仁和置业有限公司觉得是多久啊上帝啊啥都拒绝"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="20dp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/home_site"
                android:layout_gravity="center"
                android:layout_width="10dp"
                android:layout_height="10dp" />
    <TextView
        android:id="@+id/rootupload_local"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="11dp"
        tool:text="湖北省武汉市北岸区竹叶山中环商贸城C9-11"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/rootupload_projectLine"
        android:layout_below="@+id/rootupload_projectcent"
        android:layout_width="match_parent"
        android:background="@color/topLine"
        android:layout_height="1dp" />
    <!--底部-->
    <LinearLayout
        android:layout_below="@+id/rootupload_projectLine"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/rootupload_bottomDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                tool:text="2018-3-12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="更新"
                    android:textSize="12dp"/>
            </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据"
            android:textColor="@color/uncomplete"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/rootupload_countData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/uncomplete"
            android:textSize="10dp"
            tool:text="51"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/uncomplete"
            android:textSize="10dp"
            android:text="条，附件"/>
        <TextView
            android:id="@+id/rootupload_countAttchments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/uncomplete"
            android:textSize="10dp"
            tool:text="9"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/uncomplete"
            android:textSize="10dp"
            android:text="个未上传"/>
    </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>
