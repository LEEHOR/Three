<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardBackgroundColor="@color/colorWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/home_item_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/rootSearch_inspect_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="[飞检,不录音]"/>
                <TextView
                    android:id="@+id/rootSearch_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_below="@+id/rootSearch_inspect_record"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="@color/date"
                    tool:text="2018/3/2" />

                <TextView
                    android:id="@+id/rootSearch_dateline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/rootSearch_startDate"
                    android:layout_below="@+id/rootSearch_inspect_record"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/date" />

                <TextView
                    android:id="@+id/rootSearch_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/rootSearch_dateline"
                    android:layout_below="@+id/rootSearch_inspect_record"
                    android:textColor="@color/date"
                    tool:text="2018/4/3" />


                <View
                    android:layout_below="@+id/rootSearch_endDate"
                    android:layout_width="310dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/topLine" />
            </RelativeLayout>
        </LinearLayout>



        <!--中部-->
        <LinearLayout
            android:id="@+id/home_item_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/home_item_top">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/rootSearch_projectLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rootSearch_projectNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/title"
                        android:textSize="14sp"
                        tool:text="[201574155]" />
                    <TextView
                        android:id="@+id/rootSearch_projectTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/title"
                        tool:text="hahahahahaahahhahhaahahahahhahahah" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/rootSearch_projectlineC"
                    android:layout_below="@+id/rootSearch_projectLine"
                    android:orientation="horizontal"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/home_company" />
                    <TextView
                        android:id="@+id/rootSearch_storeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/centerTxt"

                        tool:text="武汉仁和置业有限公司觉得是多久啊上帝啊啥都拒绝" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/rootSearch_projectlineB"
                    android:layout_below="@+id/rootSearch_projectlineC"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/home_site" />
                    <TextView
                        android:id="@+id/rootSearch_local"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/centerTxt"
                        tool:text="湖北省武汉市北岸区竹叶山中环商贸城C9-11" />
                </LinearLayout>

                <View
                    android:layout_below="@+id/rootSearch_projectlineB"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/topLine" />
            </RelativeLayout>
        </LinearLayout>
              <LinearLayout
                  android:layout_marginTop="5dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="15dp"
                  android:layout_marginBottom="10dp"
                  android:layout_below="@+id/home_item_center">
                <TextView
                    android:id="@+id/rootSearch_modifyTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1012-544-66"/>
              </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

